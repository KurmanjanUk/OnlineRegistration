@{

    ViewBag.Title = "Home Page";
}

<head>

    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>


<div class="container">
    <img src="~/Images/0.jpg" alt="" style="width:8%;">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
            <li data-target="#myCarousel" data-slide-to="5"></li>
            <li data-target="#myCarousel" data-slide-to="6"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            <div class="item active">
                <img src="c#.jpg" alt=" " style="width:40%; opacity:0.8;">
                <div class="carousel-caption">
                    <h3 style="color:lawngreen; font-size:40px">OnlineRegistration</h3>
                    <p style="color:lawngreen; text-align:right; font-size:larger">Зарегистрируйся не выходя из дому</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Images/Mt.jpg" alt=" " style="width:40%; opacity:0.8;">
                <div class="carousel-caption">
                    <h3 style="color:lawngreen; font-size:40px; text-align:right">MoneyTree - Электронный кошелек на всю страну</h3>
                    <p style="color:lawngreen; text-align:right; font-size:larger">Пополняйте и используйте баланс 24/7 в самых отдаленных уголках Кыргызстана</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Images/mt1.jpg" alt=" " style="width:40%; opacity:0.8;">
                <div class="carousel-caption">
                    <h3 style="color:lawngreen; font-size:40px">MoneyTree - это больше чем Деньги...</h3>
                    <p style="color:lawngreen; text-align:right; font-size:larger">Оплачивайте за коммунальные услуги, интернет, штрафы, налоги, сотовую связь и получайте бонусы</p>
                </div>
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

