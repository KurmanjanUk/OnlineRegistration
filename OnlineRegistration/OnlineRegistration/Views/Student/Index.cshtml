@model IEnumerable<OnlineRegistration.Models.Course>

@{
    ViewBag.Title = "Index";
}

@*<h2>Добавленные курсы</h2>*@

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mentor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mentor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.CourseID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CourseID }) |*@
            @using (Html.BeginForm("CancelCourse", "Student", FormMethod.Post))
            { 
                <input value="@item.CourseID" name="courseID" id="courseID" class="hidden"/>
                <button type="submit" class="btn btn-default">Cancel</button>
            }
        </td>
    </tr>
}


</table>
