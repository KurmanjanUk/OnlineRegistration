@using OnlineRegistration.Helpers;
@model OnlineRegistration.ViewModels.CourseDetailViewModel


@{
    ViewBag.Title = "Details";
}

<h2>Подробности</h2>
<div class="row">
    <div class="col-md-6">
        <div>
            <h4>Курс</h4>
            <img src="@Model.Course.GetImageSource()" />
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Course.CourseName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Course.CourseName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Course.Mentor)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Course.Mentor)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Course.Cost)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Course.Cost)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Course.StartDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Course.StartDate)
                </dd>
            </dl>
        </div>
    </div>
    <div class="col-md-6">
        <h4>Список студентов</h4>
        <table class="table">
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@Html.DisplayFor(u => user.FullName)</td>
                </tr>
            }
        </table>
    </div>
</div>
<p>
    @Html.ActionLink("Отредактировать", "Edit", new { id = Model.Course.CourseID }) |
    @Html.ActionLink("Назад", "Index")
</p>


